  <section id="contact" class="contact">
    <div class="container" data-aos="fade-up">

      <div class="section-title">
        <h2>Add the services</h2>
        <p>Enter the details to get started</p>
      </div>

      <div class="row">

        <div class="col d-flex justify-content-center">
        <div class="col-lg-7 mt-5 mt-lg-0 d-flex align-items-center" data-aos="fade-up" data-aos-delay="200">
          <form action="/service/update/<%= service._id %>" method="POST"  class="email-form">
            <div class="row">
              <div class="form-group col-md-6">
                <label for="name">Your Name</label>
                <input type="text" name="name" class="form-control" id="name" placeholder="Your Name" value="<%= service.name %>">
              </div>
              <div class="form-group col-md-6 mt-3 mt-md-0">
                <label for="email">Your Email</label>
                <input type="email" class="form-control" name="email" id="email" placeholder="Your Email" required>
              </div>
              <div class="form-group col-md-6 mt-3 mt-md-0">
                <label for="phonenum">Phone no</label>
                <input type="text" class="form-control" name="phonenum" id="phonenum" placeholder="Your number" required>
              </div>
              <div class="form-group col-md-6 mt-3 mt-md-0">
                <label for="name">Company Name</label>
                <input type="text" class="form-control" name="company_name" id="company_name" placeholder="Your Company Name" required>
              </div>
              <div class="form-group col-md-6 mt-3 mt-md-0">
                <label for="name">Location</label>
                <input type="text" class="form-control" name="location" id="email" placeholder="Your Email" required>
              </div>
              <div class="form-group col-md-6 mt-3 mt-md-0">
                <label for="name">Weight (in tons)</label>
                <input type="text" class="form-control" name="weight" id="email" placeholder="Your Email" required>
              </div>
              <div class="form-group col-md-6 mt-3 mt-md-0">
                <label for="name">From</label>
                <input type="text" class="form-control" name="from" id="email" placeholder="Your Email" required>
              </div>
              <div class="form-group col-md-6 mt-3 mt-md-0">
                <label for="name">To</label>
                <input type="text" class="form-control" name="to" id="email" placeholder="Your Email" required>
              </div>
            </div>
          
            <div class="form-group mt-3">
              <label for="name">Message</label>
              <textarea class="form-control" name="message" rows="10" required></textarea>
            </div>
            <div class="my-3">
              <div class="loading">Loading</div>
              <div class="error-message"></div>
              <div class="sent-message">Your message has been sent. Thank you!</div>
            </div>
            <div class="text-center"><button type="submit">Send Message</button></div>
          </form>
        </div>
      </div>

      </div>

    </div>
  </section>
  <%- include('partials/footer') %>